<h1>新規投稿</h1>

<%= form_with(model: @share, local: true) do |f| %>
  <%= f.label :title, 'タイトル' %>
  <%= f.text_field :title %>
  
  <%= f.label :content, '内容' %>
  <%= f.text_field :content %>
  
  <%= f.label :place, '場所' %>
  <%= f.text_field :place %>

  <%= f.submit '投稿' %>
<% end %>

<%= link_to '一覧に戻る', shares_path %>